{% import 'Layouts/layout-modal.twig' as modals %}

<div class='ver-rol' class='col-md-12'>
    {% if roles%}

        <table class='table table-hover table-striped'>
            <tr>
                <th>id</th>
                <th>Rol</th>
                <th>Creado</th>
                <th>Modificado</th>
                <th></th>
            </tr>
            {% for rol in roles%}
                <tr>
                    <td>{{rol.Role.id}}</td>
                    <td>{{rol.Role.name}}</td>
                    <td>{{rol.Role.created}}</td>
                    <td>{{rol.Role.modified}}</td>
                    <td>
                        <button class='btn btn-md btn-primary' onclick="$('.ver-rol').load('Roles/modificar',{'id':'{{rol.Role.id}}'})"><span class='glyphicon glyphicon-edit'></span></button>
                        <button class='btn btn-md btn-danger' data-toggle="modal" data-target="#modal-preguntar" onclick="deleteElement('{{rol.Role.id }}','{{ rol.Role.name}}','Roles','rol')">
                            <span class='glyphicon glyphicon-remove'></span>
                        </button>
                    </td>
                </tr>


            {% endfor %}
        </table>



    {% else %}
        <div class='col-md-12 text-center'>
            <p class='lead'>Lo sentimos, no hay registros.</p>
        </div>
    {% endif %}
</div>

{{ modals.createModal('Rol','el') }}



{% block scripts %}
    {{html.script('management')}}
{% endblock %}
