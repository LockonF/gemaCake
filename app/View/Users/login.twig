{% block stylesheets %}
    {{ html.css('styles-index') }}
{% endblock %}

{% block contenido %}

    <header class='container-fluid'>
        <div class='col-md-4'>
            <h2>
                <img src="img/logo.png" class='logo-mini'>
                GEMA
            </h2>


        </div>
        <div class='col-md-8 col-xs-12'>

            <nav class='pull-right'>
                <ul class='nav nav-pills'>
                    <li><a href="#inicio" >Inicio</a></li>
                    <li><a href="#caracteristicas" >¿Qué es GEMA?</a></li>
                    <li><a href="#registro" >Regístrate</a></li>

                </ul>
            </nav>

            <div class='col-md-12'>
                <div class='pull-right'>
                    <form class="form-inline" name="login" role="form" action='Users/login' method='post' style='padding-top:1em'>
                        <div class="form-group">
                            <strong>Iniciar Sesión</strong>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="username">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter email">
                        </div>

                        <div class="form-group">
                            <label class="sr-only" for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>

                        <button type="submit" class="btn btn-success">Iniciar Sesión</button>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <section id='inicio' class='container-fluid container-bg'>

    </section>
    <section id='presentacion' class='container-fluid text-center container-bg'>
        <h1>Evoluciona tu conocimiento.</h1>
        <p class='lead'>GEMA te ayuda a mejorar adaptándose a tus fortalezas y debilidades.</p>
        <a href="#registro" role='button' class='btn btn-lg btn-primary'> Comenzar ahora</a>
    </section>
    <section id='caracteristicas' class='container-fluid container-bg'>

        <div class='container'>
            <div class='col-md-4 text-center'>
                <img src="img/portada/1.png" class='img-portada'>
