<form class="form-horizontal" id="form-create-materia">
    <fieldset>

        {% if Materia != null %}
            <!-- Text input-->
            <div class="form-group hidden">
                <label class="col-md-4 control-label" for="fieldId">Id</label>
                <div class="col-md-4">
                    <input id="fieldId" name="data[Materia][id]" type="text" placeholder="Materia..." class="form-control input-md" required="" value="{{Materia.id}}" readonly>

                </div>
            </div>

        {% endif %}

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="fieldNombre">Nombre</label>
            <div class="col-md-4">
                <input id="fieldNombre" name="data[Materia][nombre]" type="text" placeholder="Nombre..." class="form-control input-md" required="" value='{{Materia.nombre}}'>

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="fieldNumPreguntas">Numero de Preguntas</label>
            <div class="col-md-4">
                <input id="fieldNumPreguntas" name="data[Materia][numpreguntas]" type="text" placeholder="Numero de Preguntas..." class="form-control input-md" value='{{Materia.numpreguntas}}'>
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="fieldEtiqueta">Etiqueta</label>
            <div class="col-md-4">
                <input id="fieldEtiqueta" name="data[Materia][label]" type="text" placeholder="Etiqueta..." class="form-control input-md" value='{{Materia.numpreguntas}}'>
            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="btn-enviar"></label>
            <div class="col-md-4">
                {% if Materia == null%}
                <button id="btn-enviar" name="btn-enviar" class="btn btn-success" type="button" role="button" onclick="createOrModElement('materias','createMateria','form-create-materia')" >Guardar Cambios</button>


                {% else %}
                <button id="btn-enviar" name="btn-enviar" class="btn btn-success" type="button" role="button" onclick="createOrModElement('materias','executeMod','form-create-materia')">Guardar Cambios</button>
                {% endif %}
            </div>
        </div>
    </fieldset>
</form>


