{% import 'Layouts/layout-modal.twig' as modals %}

<div class='ver-pregunta' class='col-md-12'>
{% if preguntas%}
	<table class='table table-hover table-striped'>
		<tr>
			<th>id</th>
			<th>Oracion</th>
			<th>Opc1</th>
			<th>Opc2</th>
			<th>Opc3</th>
			<th>Opc4</th>
			<th>Justificacion</th>
			<th>Tema</th>
			<th>Opcion Correcta</th>
			<th>Recurso</th>
			<th></th>
		</tr>
		{% for pregunta in preguntas%}
		<tr>
			<td>{{pregunta.Pregunta.id}}</td>
			<td>{{pregunta.Pregunta.oracion}}</td>
			<td>{{pregunta.Pregunta.opc1}}</td>
			<td>{{pregunta.Pregunta.opc2}}</td>
			<td>{{pregunta.Pregunta.opc3}}</td>
			<td>{{pregunta.Pregunta.opc4}}</td>
			<td>{{pregunta.Pregunta.just}}</td>
			<td>{{pregunta.Tema.nombre}}</td>
			<td>{{pregunta.Pregunta.opcc}}</td>
			<td>{{pregunta.Pregunta.recurso}}</td>

			<td>
				<button class='btn btn-md btn-primary' onclick="$('.ver-pregunta').load('Preguntas/modificar',{'id':'{{pregunta.User.id}}'})"><span class='glyphicon glyphicon-edit'></span></button>
				<button class='btn btn-md btn-danger' data-toggle="modal" data-target="#modal-preguntar" onclick="deleteElement('{{pregunta.Pregunta.id }}','{{ pregunta.oracion.username }}','Preguntas','pregunta')">
					<span class='glyphicon glyphicon-remove'></span>
				</button>
			</td>
		</tr>


        {% endfor %}
	</table>



{% else %}
<div class='col-md-12 text-center'>
	<p class='lead'>Lo sentimos, no hay registros.</p>
</div>
{% endif %}
</div>

{{ modals.createModal('pregunta','la') }}



{% block scripts %}
    {{html.script('management')}}
{% endblock %}


