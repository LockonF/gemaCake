{% import 'Layouts/layout-modal.twig' as modals %}

<div class='ver-tema' class='col-md-12'>
    {% if temas%}
        <table class='table table-hover table-striped'>
            <tr>
                <th>id</th>
                <th>Nombre</th>
                <th>Materia</th>
                <th></th>
            </tr>
            {% for tema in temas%}
                <tr>
                    <td>{{tema.Tema.id}}</td>
                    <td>{{tema.Tema.nombre}}</td>
                    <td>{{tema.Materia.nombre}}</td>
                    <td>
                        <button class='btn btn-md btn-primary' onclick="$('.ver-tema').load('Temas/modificar',{'id':'{{tema.Tema.id}}'})"><span class='glyphicon glyphicon-edit'></span></button>
                        <button class='btn btn-md btn-danger' data-toggle="modal" data-target="#modal-preguntar" onclick="deleteElement('{{tema.Tema.id }}','{{ tema.Tema.nombre}}','Temas','temas')">
                            <span class='glyphicon glyphicon-remove'></span>
                        </button>
                    </td>
                </tr>


            {% endfor %}
        </table>



    {% else %}
        <div class='col-md-12 text-center'>
            <p class='lead'>Lo sentimos, no hay registros.</p>
        </div>
    {% endif %}
</div>

{{ modals.createModal('tema','el') }}



{% block scripts %}
    {{html.script('management')}}
{% endblock %}


